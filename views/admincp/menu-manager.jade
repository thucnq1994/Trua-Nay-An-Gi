doctype
html( lang="en" )
    include ../template/head.jade
    link(rel='stylesheet', href='/bootstrap-datepicker/css/bootstrap-datepicker3.min.css')
    body
        .container
            include ../template/menu.jade
            div.container
                h2 Menu manager
                p #{dayOfWeek}, #{str_date}
                div.panel.panel-default
                    div.panel-heading Filter
                    div.panel-body
                        form.form-horizontal(role="form" method="post" action="" )
                            div.form-group.col-md-4
                                input.form-control.datepicker(type="text" name="date" value="#{str_date}")
                            div.form-group.col-md-2
                                button.btn.btn-primary(type="submmit") OK
                table.table.table-striped.table-bordered
                    thead
                        tr
                            th Name
                            th Price
                            th Action
                    tbody 
                        - each menu in menus
                            tr
                                td #{menu.foodName}
                                td #{menu.price}
                                td
                                    a.btn.btn-primary(href="/admincp/menu-manager/edit/#{menu._id}") Edit
                                    a.btn.btn-danger(href="javasript:void(0)" data-confirm="Are you sure you want to delete?") Delete
 
        include ../template/foot.jade
        script(src="/bootstrap-datepicker/js/bootstrap-datepicker.min.js")
        script(type="text/javascript").
            $(document).ready(function() {
                $('.datepicker').datepicker({
                    format: 'dd/mm/yyyy',
                    autoclose: true
                });

                $('a[data-confirm]').click(function(ev) {
                    var href = $(this).attr('href');
                    if (!$('#dataConfirmModal').length) {
                        $('body').append('<div id="dataConfirmModal" class="modal" role="dialog" aria-labelledby="dataConfirmLabel" aria-hidden="true"><div class="modal-header"><button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button><h3 id="dataConfirmLabel">Please Confirm</h3></div><div class="modal-body"></div><div class="modal-footer"><button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button><a class="btn btn-primary" id="dataConfirmOK">OK</a></div></div>');
                    } 
                    $('#dataConfirmModal').find('.modal-body').text($(this).attr('data-confirm'));
                    $('#dataConfirmOK').attr('href', href);
                    $('#dataConfirmModal').modal({show:true});
                    return false;
                });

            });